<div class="exchange-link">
	{{#link-to "index"}}Internet Exchange List{{/link-to}}
</div>
<h2 class="search-result-name">
	{{model.name}}
</h2>
<a class="email-link" href="mailto:?Subject=TeleGeography%20Internet%20Exchange%20Map&Body=" onclick="this.href=this.href+window.location.href;">Email link</a>
{{#each building in buildings}}
<div class="building">
	<div class="building-marker" {{bindAttr style="building.offset"}}></div>
	<div class="building-info">
		<div class="building-address">
			{{view view.listItemView}}
		</div>
	</div>
	<div style="clear:both;"></div>
</div>
{{/each}}